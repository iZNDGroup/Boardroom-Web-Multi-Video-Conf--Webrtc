    <script defer type="text/javascript" src="/js/vendor/es6-promise.min.js"></script>
    <script defer type="text/javascript" src="/js/ie_polyfills.js"></script>
    <script defer type="text/javascript" src="/js/components/modal.js"></script>
    <script defer type="text/javascript" src="/js/vendor/lazy_loader.js"></script>
    <script defer type="text/javascript" src="/js/rtcApp.js"></script>

    <script>
      window.isWebRTCVersion=<%=isWebRTCVersion%>
    </script>
  </head>

  <body class="forbidden">
    <section class="main">
      <section>

        <header>
          <img src="images/opentok-logo.png" alt="Boardroom transparent logo">
        </header>
<% if (!isWebRTCVersion) { %>
        <h1>The BOARDROOM Technologies Platform</h1>
<% } else { %>
        <h1>Boardroom Suite WebRTC</h1>
        <h2>Built by Boardroom on the iZND Platform</h2>
        <h3>This Boardroom WebRTC enables group video conferencing, text chat, screen sharing, and more</h3>
<% } %>
        <form>
          <p>
            <input id="room" class="text-input required" placeholder="Meeting ID">
            <input id="user" class="text-input" placeholder="Enter Your Name">
            <p class="error-room error-text">Enter Meeting RoomID</p>
          </p>
          <button id="enter" class="btn tb btn-primary btn-arrow btn-next btn-padding">Join Meeting</button>
        </form>
        <div class="safari-plug">
          <a href="https://safari.opentokrtc.com/">Try the BOARDROOM WebRTC for Safari.</a>
        </div>
      </section>
    </section>

<% if (isWebRTCVersion) { %>
    <section class="tc-modal contract">
      <form class="tc-dialog">
        <i data-icon="close_gray" class="close"></i>
        <header>
          <span>Terms of Use</span>
        </header>
        <p>By accepting our terms of use you acknoledge that you have read the <a target="_blank" href="https://www.izndgroup.com">user agreement</a>, and <a target="_blank" href="http://hosting.iznd.com.my/support/privacy.php">privacy policy</a>, and you are at least 18 years of age.</p>
        <footer>
          <button id="enter" class="btn tb btn-primary btn-arrow btn-next btn-padding accept">Accept and Continue</button>
        </footer>
      </form>
    </section>
<% } %>
