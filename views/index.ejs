    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=yes">

    <link rel="stylesheet" href="css/buttons.css" />
<% if (isWebRTCVersion) { %>
    <link rel="stylesheet" href="css/checkboxes.css" />
<% } %>
